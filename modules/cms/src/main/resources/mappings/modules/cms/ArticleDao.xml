	<update id="updateExpiredWeight">
		update ${_prefix}cms_article SET weight = 0
		WHERE weight &gt; 0 AND weight_date &lt; #{weightDate}
	</update>
	
	<update id="updateHitsAddOne">
		update ${_prefix}cms_article set
			 hits = hits + 1
		 WHERE id = #{id}
	</update>
	
